.train_repeat
    box-sizing border-box
    width 1024px
    min-height 78vh    
    margin 0 auto  
    display flex
    justify-content space-between
    .repeat_square
        width 550px
        height 500px
        display flex
        flex-wrap wrap
        justify-content center
        margin-top 86px
        border 10px solid #ffffff        
        padding 25px 0
        background-color #2c3e50
        .square
            margin 5px            
            width calc(100%/12*2 - 5px)
            background-color #fff
            box-shadow: 0 2px 4px rgba(0,0,0,.1)
    .repeat_rulles
        width 430px
        margin-top 86px
        h1  
            color #2c3e50
            font-family: 'Open Sans', sans-serif;            
            font-weight 400
            font-size 24px
            text-align center
            margin-bottom 55px
            
        h2
            color #2c3e50
            font-family: 'Open Sans', sans-serif;            
            font-weight 400
            font-size 18px
            margin-bottom 15px

